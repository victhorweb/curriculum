<h1>Listing essays</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Skill</th>
    <th>Level</th>
    <th>Reply</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @essays.each do |essay| %>
  <tr>
    <td><%= essay.question %></td>
    <td><%= essay.skill_id %></td>
    <td><%= essay.level_id %></td>
    <td><%= essay.reply %></td>
    <td><%= link_to 'Show', essay %></td>
    <td><%= link_to 'Edit', edit_essay_path(essay) %></td>
    <td><%= link_to 'Destroy', essay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

