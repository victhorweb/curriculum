= form_for(@user, :url =>"/admin/users/") do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        Proibido salvar esse user:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :'E-mail'
    %br/
    = f.text_field :email
  .field
    = f.label :Senha
    %br/
    = f.password_field :plain_password
  .actions
    %input{:type => "submit", :value => "Salvar"}