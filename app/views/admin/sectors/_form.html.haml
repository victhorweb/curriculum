= form_for(@sector) do |f|
  - if @sector.errors.any?
    #error_explanation
      %h2
        = pluralize(@sector.errors.count, "error")
        prohibited this sector from being saved:
      %ul
        - @sector.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit