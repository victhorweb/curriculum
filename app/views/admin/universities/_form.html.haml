= form_for(@university) do |f|
  - if @university.errors.any?
    #error_explanation
      %h2
        = pluralize(@university.errors.count, "error")
        prohibited this university from being saved:
      %ul
        - @university.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :state_id
    %br/
    = f.select :state_id, @states
  .field
    = f.label :city_id
    %br/
    = f.select :city_id, @city
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :district
    %br/
    = f.text_field :district
  .field
    = f.label :zip_code
    %br/
    = f.text_field :zip_code
  .actions
    = f.submit